<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment_second"
    android:background="#FFB6C1">

    <TextView
        android:id="@+id/textViewOnlySayTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Only SMS with this word:" />

    <EditText
        android:id="@+id/editTextNoInputTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnNoEntryTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retrieve SMS" />

    <TextView
        android:id="@+id/textViewNoPopTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Populate:" />

</LinearLayout>